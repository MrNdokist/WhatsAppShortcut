<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="match_parent"
    n1:layout_height="match_parent"
    n1:orientation="vertical">

    <ImageView
        n1:id="@+id/imageView"
        n1:layout_width="match_parent"
        n1:layout_height="match_parent"
        n1:scaleType="fitCenter" />

    <ImageView
        n1:id="@+id/isVideo"
        n1:layout_width="90dp"
        n1:layout_height="90dp"
        n1:layout_centerInParent="true"
        n1:src="@drawable/selecter"
        n1:visibility="gone" />

    <VideoView
        n1:id="@+id/videoViewVideoMedia"
        n1:layout_width="match_parent"
        n1:layout_centerInParent="true"
        n1:visibility="gone"
        n1:layout_height="wrap_content"/>
</RelativeLayout>